@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix schema: <http://schema.org/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix yago: <http://yago-knowledge.org/resource/> .

<http://shaclshapes.org/BookShape> a sh:NodeShape ;
    sh:property [ sh:datatype rdf:langString ;
            sh:minCount 1 ;
            sh:path rdfs:label ],
        [ sh:datatype rdf:langString ;
            sh:path rdfs:comment ],
        [ sh:datatype xsd:anyURI ;
            sh:path schema:url ],
        [ sh:datatype xsd:decimal ;
            sh:maxCount 1 ;
            sh:path schema:numberOfPages ],
        [ sh:class yago:Award ;
            sh:path schema:award ],
        [ sh:class schema:Person ;
            sh:path schema:illustrator ],
        [ sh:class schema:Person ;
            sh:path schema:editor ],
        [ sh:nodeKind sh:IRI ;
            sh:path schema:about ],
        [ sh:class schema:Language ;
            sh:path schema:inLanguage ],
        [ sh:datatype xsd:string ;
            sh:maxCount 1 ;
            sh:path schema:isbn ],
        [ sh:class [ sh:or ( schema:Organization schema:Person ) ] ;
            sh:path schema:author ],
        [ sh:datatype xsd:dateTime ;
            sh:maxCount 1 ;
            sh:path schema:dateCreated ],
        [ sh:class schema:Place ;
            sh:path schema:contentLocation ],
        [ sh:datatype xsd:anyURI ;
            sh:path schema:image ],
        [ sh:class [ sh:or ( schema:Organization schema:Person ) ] ;
            sh:maxCount 1 ;
            sh:path schema:publisher ],
        [ sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:path owl:sameAs ;
            sh:pattern "^http://www.wikidata.org/entity/" ],
        [ sh:class schema:Place ;
            sh:maxCount 1 ;
            sh:path schema:locationCreated ],
        [ sh:datatype xsd:anyURI ;
            sh:minCount 1 ;
            sh:path schema:mainEntityOfPage ],
        [ sh:datatype xsd:anyURI ;
            sh:path schema:sameAs ],
        [ sh:datatype rdf:langString ;
            sh:path schema:alternateName ] ;
    sh:targetClass schema:Book .

