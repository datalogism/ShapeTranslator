@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix schema: <http://schema.org/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix yago: <http://yago-knowledge.org/resource/> .

#################################################################
# AstronomicalObject Shape
#################################################################
<http://shaclshapes.org/AstronomicalObjectShape>
    a sh:NodeShape ;
    sh:targetClass yago:AstronomicalObject ;

    ############################## schema:Thing property
    sh:property [
        sh:path rdfs:comment ;
        sh:datatype rdf:langString ;
        sh:minCount 1 ;
    ] ;
    sh:property [
        sh:path rdfs:label ;
        sh:datatype rdf:langString ;
        sh:minCount 1 ;
    ] ;
    sh:property [
        sh:path schema:alternateName ;
        sh:datatype rdf:langString ;
    ] ;
    sh:property [
        sh:path schema:image ;
        sh:datatype xsd:anyURI ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        sh:path schema:mainEntityOfPage ;
        sh:datatype xsd:anyURI ;
        sh:minCount 1 ;
    ] ;
    sh:property [
        sh:path schema:sameAs ;
        sh:datatype xsd:anyURI ;
        sh:maxCount 1 ;
    ] ;

    ############################## Yago property
    sh:property [
        sh:path yago:distanceFromEarth ;
        sh:datatype xsd:decimal ;
    ] ;
    sh:property [
        sh:path yago:luminosity ;
        sh:datatype xsd:decimal ;
    ] ;
    sh:property [
        sh:path yago:mass ;
        sh:datatype xsd:decimal ;
    ] ;
    sh:property [
        sh:path yago:parallax ;
        sh:datatype xsd:decimal ;
    ] ;
    sh:property [
        sh:path yago:parentBody ;
        sh:class yago:AstronomicalObject ;
    ] ;
    sh:property [
        sh:path yago:radialVelocity ;
        sh:datatype xsd:decimal ;
    ] ;
    ############################## owl:sameAs restricted to Wikidata

    sh:property [
        sh:path owl:sameAs ;
        sh:pattern "^http://www.wikidata.org/entity/" ;
    ] .