@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix geo: <http://www.opengis.net/ont/geosparql#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix schema: <http://schema.org/> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix wd: <http://www.wikidata.org/entity/> .
@prefix yago: <http://yago-knowledge.org/resource/> .

#################################################################
# Movie Shape
#################################################################
<http://shaclshapes.org/MovieShape>
    a sh:NodeShape ;
    sh:targetClass schema:Movie ;
    ############################## schema:Thing property
    sh:property [
        sh:path rdfs:label ;
        sh:datatype rdf:langString ;
        sh:minCount 1 ;
    ] ;
    sh:property [
        sh:path rdfs:comment ;
        sh:datatype rdf:langString ;
    ] ;
    sh:property [
        sh:path schema:alternateName ;
        sh:datatype rdf:langString ;
    ] ;
    sh:property [
        sh:path schema:image ;
        sh:datatype xsd:anyURI ;
    ] ;
    sh:property [
        sh:path schema:mainEntityOfPage ;
        sh:datatype xsd:anyURI ;
        sh:minCount 1 ;
    ] ;
    sh:property [
        sh:path schema:sameAs ;
        sh:datatype xsd:anyURI ;
    ] ;
    sh:property [
        sh:path schema:url ;
        sh:datatype xsd:anyURI ;
    ] ;

    ############################## schema.org property
    sh:property [
        sh:path schema:actor ;
        sh:class schema:Person ;
    ] ;
    sh:property [
        sh:path schema:director ;
        sh:class schema:Person ;
    ] ;
    sh:property [
        sh:path schema:duration ;
        sh:datatype xsd:decimal ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        sh:path schema:locationCreated ;
        sh:class schema:Place ;
    ] ;
    sh:property [
        sh:path schema:musicBy ;
        sh:class [ sh:or ( schema:MusicGroup schema:Person ) ] ;
    ] ;
    sh:property [
        sh:path schema:productionCompany ;
        sh:class schema:Organization ;
    ] ;
    sh:property [
        sh:path schema:about ;
        sh:nodeKind sh:IRI ;
    ] ;
    sh:property [
        sh:path schema:author ;
        sh:class [ sh:or ( schema:Organization schema:Person ) ] ;
    ] ;
    sh:property [
        sh:path schema:award ;
        sh:class yago:Award ;
    ] ;
    sh:property [
        sh:path schema:contentLocation ;
        sh:class schema:Place ;
    ] ;
    sh:property [
        sh:path schema:dateCreated ;
        sh:datatype xsd:dateTime ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        sh:path schema:inLanguage ;
        sh:class yago:Human_Language_Q20162172 ;
    ] ;
    sh:property [
        sh:path schema:isbn ;
        sh:datatype xsd:string ;
        sh:maxCount 1 ;
    ] ;

    ############################## owl:sameAs restricted to Wikidata
    sh:property [
        sh:path owl:sameAs ;
        sh:pattern "^http://www.wikidata.org/entity/" ;
    ] .