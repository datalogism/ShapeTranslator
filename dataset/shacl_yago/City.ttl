@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix geo: <http://www.opengis.net/ont/geosparql#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix schema: <http://schema.org/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix yago: <http://yago-knowledge.org/resource/> .

#################################################################
# City Shape
#################################################################
<http://shaclshapes.org/CityShape>
    a sh:NodeShape ;
    sh:targetClass schema:City ;
    
    ############################## schema:Thing property
    sh:property [
        sh:path rdfs:label ;
        sh:datatype rdf:langString ;
        sh:minCount 1 ;
    ] ;
    sh:property [
        sh:path rdfs:comment ;
        sh:datatype rdf:langString ;
    ] ;
    sh:property [
        sh:path schema:alternateName ;
        sh:datatype rdf:langString ;
    ] ;
    sh:property [
        sh:path schema:image ;
        sh:datatype xsd:anyURI ;
    ] ;
    sh:property [
        sh:path schema:mainEntityOfPage ;
        sh:datatype xsd:anyURI ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        sh:path schema:sameAs ;
        sh:datatype xsd:anyURI ;
    ] ;
    sh:property [
        sh:path schema:url ;
        sh:datatype xsd:anyURI ;
    ] ;

    ############################## schema.org property
    sh:property [
        sh:path schema:geo ;
        sh:datatype geo:wktLiteral ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        sh:path schema:location ;
        sh:class schema:Place ;
    ] ;
    sh:property [
        sh:path schema:dateCreated ;
        sh:datatype xsd:dateTime ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        sh:path schema:memberOf ;
        sh:class schema:Organization ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        sh:path schema:postalCode ;
        sh:datatype xsd:string ;
    ] ;
    sh:property [
        sh:path schema:slogan ;
        sh:datatype xsd:string ;
        sh:maxCount 1 ; 
    ] ;
    sh:property [
        sh:path schema:logo ;
        sh:datatype xsd:anyURI ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        sh:path schema:award ;
        sh:class yago:Award ;
    ] ;
    sh:property [
        sh:path schema:founder ;
        sh:class schema:Person ;
        sh:maxCount 1 ;
    ] ;

    ############################## Yago property
    sh:property [
        sh:path yago:area ;
        sh:datatype xsd:decimal ;
    ] ;
    sh:property [
        sh:path yago:elevation ;
        sh:datatype xsd:decimal ;
    ] ;
    sh:property [
        sh:path yago:highestPoint ;
        sh:class schema:Place ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        sh:path yago:neighbors ;
        sh:class schema:Place ;
    ] ;
    sh:property [
        sh:path yago:demonym ;
        sh:datatype xsd:string ;
    ] ;
    sh:property [
        sh:path yago:leader ;
        sh:class schema:Person ;
    ] ;
    sh:property [
        sh:path yago:populationNumber ;
        sh:datatype xsd:decimal ;
    ] ;
    sh:property [
        sh:path yago:replaces ;
        sh:class schema:AdministrativeArea ;
    ] ;

    ############################## owl:sameAs restricted to Wikidata
    sh:property [
        sh:path owl:sameAs ;
        sh:pattern "^http://www.wikidata.org/entity/" ;
    ] .