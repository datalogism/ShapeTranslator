@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix schema: <http://schema.org/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix yago: <http://yago-knowledge.org/resource/> .

##########################################################
# TVSeries SHAPE
##########################################################

<http://shaclshapes.org/TVSeriesShape>
  a sh:NodeShape ;
  sh:targetClass schema:TVSeries ;

  ############################## schema:Thing property
  sh:property [
    sh:path rdfs:comment ;
    sh:datatype rdf:langString ;
  ] ;
  sh:property [
    sh:path rdfs:label ;
    sh:datatype rdf:langString ;
    sh:minCount 1 ;
  ] ;
  sh:property [
    sh:path schema:alternateName ;
    sh:datatype rdf:langString ;
  ] ;
  sh:property [
    sh:path schema:image ;
    sh:datatype xsd:anyURI ;
  ] ;
  sh:property [
    sh:path schema:mainEntityOfPage ;
    sh:datatype xsd:anyURI ;
    sh:minCount 1 ;
  ] ;
  sh:property [
    sh:path schema:sameAs ;
    sh:datatype xsd:anyURI ;
  ] ;
  sh:property [
    sh:path schema:url ;
    sh:datatype xsd:anyURI ;
  ] ;

  ############################## schema.org property
  sh:property [
    sh:path schema:actor ;
    sh:class schema:Person ;
  ] ;
  sh:property [
    sh:path schema:director ;
    sh:class schema:Person ;
  ] ;
  sh:property [
    sh:path schema:locationCreated ;
    sh:class schema:Place ;
  ] ;
  sh:property [
    sh:path schema:musicBy ;
    sh:or ( [ sh:class schema:MusicGroup ] [ sh:class schema:Person ] ) ;
  ] ;
  sh:property [
    sh:path schema:numberOfEpisodes ;
    sh:datatype xsd:decimal ;
    sh:maxCount 1 ;
  ] ;
  sh:property [
    sh:path schema:numberOfSeasons ;
    sh:datatype xsd:decimal ;
    sh:maxCount 1 ;
  ] ;
  sh:property [
    sh:path schema:productionCompany ;
    sh:class schema:Organization ;
  ] ;
  sh:property [
    sh:path schema:about ;
    sh:nodeKind sh:IRI ;
  ] ;
  sh:property [
    sh:path schema:author ;
    sh:or ( [ sh:class schema:Organization ] [ sh:class schema:Person ] ) ;
  ] ;
  sh:property [
    sh:path schema:award ;
    sh:class yago:Award ;
  ] ;
  sh:property [
    sh:path schema:contentLocation ;
    sh:class schema:Place ;
  ] ;
  sh:property [
    sh:path schema:dateCreated ;
    sh:datatype xsd:dateTime ;
    sh:maxCount 1 ;
  ] ;
  sh:property [
    sh:path schema:inLanguage ;
    sh:class schema:Language ;
  ] ;


  ############################## owl:sameAs restricted to Wikidata
  sh:property [
      sh:path owl:sameAs ;
      sh:pattern "^http://www.wikidata.org/entity/" ;
  ] .
