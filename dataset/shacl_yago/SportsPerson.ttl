@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix schema: <http://schema.org/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix yago: <http://yago-knowledge.org/resource/> .

##########################################################
# SPORTS PERSON SHAPE
##########################################################

<http://shaclshapes.org/SportsPersonShape>
    a sh:NodeShape ;
    sh:targetClass yago:SportsPerson ;

    ############################## schema:Thing property
    sh:property [
        sh:path rdfs:comment ;
        sh:datatype rdf:langString ;
    ] ;
    sh:property [
        sh:path rdfs:label ;
        sh:datatype rdf:langString ;
        sh:minCount 1 ;
    ] ;
    sh:property [
        sh:path schema:alternateName ;
        sh:datatype rdf:langString ;
    ] ;
    sh:property [
        sh:path schema:image ;
        sh:datatype xsd:anyURI ;
    ] ;
    sh:property [
        sh:path schema:mainEntityOfPage ;
        sh:datatype xsd:anyURI ;
        sh:minCount 1 ;
    ] ;
    sh:property [
        sh:path schema:sameAs ;
        sh:datatype xsd:string ;
    ] ;
    sh:property [
        sh:path schema:url ;
        sh:datatype xsd:anyURI ;
    ] ;

    ############################## schema.org property
    sh:property [
        sh:path schema:alumniOf ;
        sh:class schema:Organization ;
    ] ;
    sh:property [
        sh:path schema:award ;
        sh:class yago:Award ;
    ] ;
    sh:property [
        sh:path schema:birthDate ;
        sh:datatype xsd:dateTime ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        sh:path schema:birthPlace ;
        sh:class schema:Place ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        sh:path schema:children ;
        sh:class schema:Person ;
    ] ;
    sh:property [
        sh:path schema:deathDate ;
        sh:datatype xsd:dateTime ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        sh:path schema:deathPlace ;
        sh:class schema:Place ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        sh:path schema:gender ;
        sh:class yago:Gender ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        sh:path schema:homeLocation ;
        sh:class schema:Place ;
    ] ;
    sh:property [
        sh:path schema:knowsLanguage ;
        sh:class yago:Human_Language_Q20162172 ;
    ] ;
    sh:property [
        sh:path schema:memberOf ;
        sh:class schema:Organization ;
    ] ;
    sh:property [
        sh:path schema:nationality ;
        sh:class schema:Country ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        sh:path schema:spouse ;
        sh:class schema:Person ;
    ] ;
    sh:property [
        sh:path schema:worksFor ;
        sh:class schema:Organization ;
    ] ;

    ############################## Yago property
    sh:property [
        sh:path yago:playsIn ;
        sh:class schema:Event ;
    ] ;
    sh:property [
        sh:path yago:sportNumber ;
        sh:datatype xsd:string ;
    ] ;
    sh:property [
        sh:path yago:beliefSystem ;
        sh:class yago:BeliefSystem ;
    ] ;

    ############################## owl:sameAs restricted to Wikidata
    sh:property [
        sh:path owl:sameAs ;
        sh:pattern "^http://www.wikidata.org/entity/" ;
    ] .
