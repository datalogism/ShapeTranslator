@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix geo: <http://www.opengis.net/ont/geosparql#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix schema: <http://schema.org/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix yago: <http://yago-knowledge.org/resource/> .

#################################################################
# Continent Shape
#################################################################
<http://shaclshapes.org/ContinentShape>
    a sh:NodeShape ;
    sh:targetClass schema:Continent ;

    ############################## schema:Thing property
    sh:property [
        sh:path rdfs:comment ;
        sh:datatype rdf:langString ;
        sh:minCount 1 ;
    ] ;
    sh:property [
        sh:path rdfs:label ;
        sh:datatype rdf:langString ;
        sh:minCount 1 ;
    ] ;
    sh:property [
        sh:path schema:alternateName ;
        sh:datatype rdf:langString ;
        sh:minCount 1 ;
    ] ;
    sh:property [
        sh:path schema:image ;
        sh:datatype xsd:anyURI ;
    ] ;
    sh:property [
        sh:path schema:mainEntityOfPage ;
        sh:datatype xsd:anyURI ;
        sh:minCount 1 ;
    ] ;
    sh:property [
        sh:path schema:sameAs ;
        sh:datatype xsd:anyURI ;
        sh:minCount 1 ;
    ] ;
    sh:property [
        sh:path schema:url ;
        sh:datatype xsd:anyURI ;
        sh:maxCount 1 ;
    ] ;

    ########## schema.org properties 
    sh:property [
        sh:path schema:geo ;
        sh:datatype geo:wktLiteral ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        sh:path schema:location ;
        sh:class schema:Place ;
    ] ;

    ############################## Yago property
    sh:property [
        sh:path yago:area ;
        sh:datatype xsd:decimal ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        sh:path yago:highestPoint ;
        sh:class schema:Place ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        sh:path yago:lowestPoint ;
        sh:class schema:Place ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        sh:path yago:neighbors ;
        sh:class schema:Place ;
    ] ;
    sh:property [
        sh:path yago:demonym ;
        sh:datatype xsd:string ;
    ] ;
    sh:property [
        sh:path yago:populationNumber ;
        sh:datatype xsd:decimal ;
    ] ;

    ############################## owl:sameAs restricted to Wikidata
    sh:property [
        sh:path owl:sameAs ;
        sh:pattern "^http://www.wikidata.org/entity/" ;
    ] .
