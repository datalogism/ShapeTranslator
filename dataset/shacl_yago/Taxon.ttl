@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix schema: <http://schema.org/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix yago: <http://yago-knowledge.org/resource/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .

##########################################################
# Taxon SHAPE
##########################################################

<http://shaclshapes.org/TaxonShape>
  a sh:NodeShape ;
  sh:targetClass schema:Taxon ;

  ############################## schema:Thing property
  sh:property [
    sh:path rdfs:comment ;
    sh:datatype rdf:langString ;
  ] ;
  sh:property [
    sh:path rdfs:label ;
    sh:datatype rdf:langString ;
    sh:minCount 1 ;
  ] ;
  sh:property [
    sh:path schema:image ;
    sh:datatype xsd:anyURI ;
  ] ;
  sh:property [
    sh:path schema:mainEntityOfPage ;
    sh:datatype xsd:anyURI ;
    sh:minCount 1 ;
  ] ;
  sh:property [
    sh:path schema:sameAs ;
    sh:datatype xsd:anyURI ;
  ] ;
  sh:property [
    sh:path schema:url ;
    sh:datatype xsd:anyURI ;
    sh:maxCount 1 ;
  ] ;

  ############################## schema.org property
  sh:property [
    sh:path schema:parentTaxon ;
    sh:class schema:Taxon ;
  ] ;

  ############################## Yago property
  sh:property [
    sh:path yago:consumes ;
    sh:class schema:Taxon ;
  ] ;

  ############################## owl:sameAs restricted to Wikidata
  sh:property [
      sh:path owl:sameAs ;
      sh:pattern "^http://www.wikidata.org/entity/" ;
  ] .

