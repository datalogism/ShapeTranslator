@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix geo: <http://www.opengis.net/ont/geosparql#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix schema: <http://schema.org/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix yago: <http://yago-knowledge.org/resource/> .

#################################################################
# AdministrativeArea Shape
#################################################################

<http://shaclshapes.org/AdministrativeArea>
    a sh:NodeShape ;
    sh:targetClass schema:AdministrativeArea ;

    ############################## schema:Thing property
    sh:property [
        sh:path rdfs:comment ;
        sh:datatype rdf:langString ;
    ] ;
    sh:property [
        sh:path rdfs:label ;
        sh:datatype rdf:langString ;
        sh:minCount 1 ;
    ] ;
    sh:property [
        sh:path schema:alternateName ;
        sh:datatype rdf:langString ;
    ] ;
    sh:property [
        sh:path schema:image ;
        sh:datatype xsd:anyURI ;
    ] ;
    sh:property [
        sh:path schema:mainEntityOfPage ;
        sh:datatype xsd:anyURI ;
        sh:minCount 1 ;
    ] ;
    sh:property [
        sh:path schema:sameAs ;
        sh:datatype xsd:anyURI ;
    ] ;
    sh:property [
        sh:path schema:url ;
        sh:datatype xsd:anyURI ;
    ] ;
    ############################## schema.org property
    sh:property [
        sh:path schema:administrates ;
        sh:class schema:Place ;
    ];
    sh:property [
        sh:path schema:dateCreated ;
        sh:datatype xsd:dateTime ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        sh:path schema:demonym ;
        sh:datatype xsd:string ;
    ] ;
    sh:property [
        sh:path schema:leader ;
        sh:class schema:Person ;
    ] ;
    sh:property [
        sh:path schema:memberOf ;
        sh:class schema:Organization ;
    ] ;
    sh:property [
        sh:path schema:slogan ;
        sh:datatype xsd:string ;
    ] ;
    sh:property [
        sh:path schema:postalCode ;
        sh:datatype xsd:string ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        sh:path schema:geo ;
        sh:datatype geo:wktLiteral ;
        sh:maxCount 1 ;
    ] ;

    ############################## yago property
    sh:property [
        sh:path yago:populationNumber ;
        sh:datatype xsd:decimal ;
    ] ;
    sh:property [
        sh:path yago:capital ;
        sh:class schema:City ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        sh:path yago:replaces ;
        sh:class schema:AdministrativeArea ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        sh:path yago:area ;
        sh:datatype xsd:decimal ;
    ] ;
    sh:property [
        sh:path yago:elevation ;
        sh:datatype xsd:decimal ;
    ] ;
    sh:property [
        sh:path yago:highestPoint ;
        sh:class yago:Mountain ;
        sh:maxCount 1 ;
    ] ;

    # owl:sameAs restricted to Wikidata entities
    sh:property [
        sh:path owl:sameAs ;
        sh:pattern "^http://www.wikidata.org/entity/" ;
    ] .