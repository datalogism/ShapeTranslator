@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix schema: <http://schema.org/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix yago: <http://yago-knowledge.org/resource/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .

##########################################################
# Worker SHAPE
##########################################################

<http://shaclshapes.org/WorkerShape>
  a sh:NodeShape ;
  sh:targetClass yago:Worker ;

  ############################## schema:Thing property
  sh:property [
    sh:path rdfs:comment ;
    sh:datatype rdf:langString ;
    sh:minCount 1 ;
  ] ;
  sh:property [
    sh:path rdfs:label ;
    sh:datatype rdf:langString ;
    sh:minCount 1 ;
  ] ;
  sh:property [
    sh:path schema:alternateName ;
    sh:datatype rdf:langString ;
  ] ;
  sh:property [
    sh:path schema:image ;
    sh:datatype xsd:anyURI ;
  ] ;
  sh:property [
    sh:path schema:mainEntityOfPage ;
    sh:datatype xsd:anyURI ;
    sh:minCount 1 ;
  ] ;
  sh:property [
    sh:path schema:sameAs ;
    sh:datatype xsd:anyURI ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
  ] ;

  ############################## schema.org property
  sh:property [
    sh:path schema:alumniOf ;
    sh:class schema:EducationalOrganization ;
  ] ;
  sh:property [
    sh:path schema:award ;
    sh:class yago:Award ;
  ] ;
  sh:property [
    sh:path schema:birthDate ;
    sh:datatype xsd:dateTime ;
    sh:maxCount 1 ;
  ] ;
  sh:property [
    sh:path schema:birthPlace ;
    sh:class schema:Place ;
    sh:maxCount 1 ;
  ] ;
  sh:property [
    sh:path schema:deathDate ;
    sh:datatype xsd:dateTime ;
    sh:maxCount 1 ;
  ] ;
  sh:property [
    sh:path schema:deathPlace ;
    sh:class schema:Place ;
    sh:maxCount 1 ;
  ] ;
  sh:property [
    sh:path schema:gender ;
    sh:class yago:Gender ;
    sh:maxCount 1 ;
  ] ;
  sh:property [
    sh:path schema:homeLocation ;
    sh:class schema:Place ;
    sh:maxCount 1 ;
  ] ;
  sh:property [
    sh:path schema:knowsLanguage ;
    sh:class schema:Language ;
  ] ;
  sh:property [
    sh:path schema:memberOf ;
    sh:class schema:Organization ;
  ] ;
  sh:property [
    sh:path schema:nationality ;
    sh:class schema:Country ;
  ] ;
  sh:property [
    sh:path schema:spouse ;
    sh:class schema:Person ;
  ] ;
  sh:property [
    sh:path schema:worksFor ;
    sh:class schema:Organization ;
  ] ;

  ############################## Yago property
  sh:property [
    sh:path yago:beliefSystem ;
    sh:class yago:BeliefSystem ;
  ] ;
  sh:property [
    sh:path yago:appearsIn ;
    sh:class schema:CreativeWork ;
  ] ;

  ############################## owl:sameAs restricted to Wikidata
  sh:property [
      sh:path owl:sameAs ;
      sh:pattern "^http://www.wikidata.org/entity/" ;
  ] .